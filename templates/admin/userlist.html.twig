<div id="AdminTable">
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#agentstable" role="tab" aria-controls="agents" aria-selected="true"><h2>Agents</h2></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="enduser-tab" data-toggle="tab" href="#endusertable" role="tab" aria-controls="profile" aria-selected="false"><h2>End-Users</h2></a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div id="agentstable" class="tab-pane fade show active" role="tabpanel" aria-labelledby="home-tab">
    <table class="table">
    <thead class="thead-dark">
    <th scope="col">Name</th>
    <th scope="col">Status</th>
    <th scope="col" colspan="2">Actions</th>
    </thead>
    <tbody>
     {% for user in agents %}
         <tr>
            <td>{{user.firstName }}&nbsp;{{user.lastName}}</td>
            <td class="{% if user.isEnabled == '0' %}inactive{%else%}active{% endif %}">{% if user.isEnabled == '1'%}
               <p>Active</p>
              {% else%}
               <p>InActive</p>
               {% endif %}</td>
            <td><a data-userid="{{user.id}}" class="btn btn-info viewuser" href="#">More Information</a></td>
            <td><a data-userid="{{user.id}}" class="btn btn-danger deleteuser" href="#">Delete User</a></td>
         </tr>
     {% endfor %}
    </tbody>
    </table>
  </div>
  <div id="endusertable" class="tab-pane fade" role="tabpanel" aria-labelledby="enduser-tab">

    <table class="table">
    <thead class="thead-dark">
      <th scope="col">Name</th>
      <th scope="col">Status</th>
    </thead>
    <tbody>
      {% for user in endusers %}
          <tr>
             <td>{{user.firstName }}&nbsp;{{user.lastName}}</td>
             <td class="{% if user.isEnabled == '0' %}inactive{%else%}active{% endif %}">{% if user.isEnabled == '1'%}
                <p>Active</p>
               {% else%}
                <p>InActive</p>
                {% endif %}</td>
             <td><a data-userid="{{user.id}}" class="btn btn-info viewuser" href="#">More Information</a></td>
             <td><a data-userid="{{user.id}}" class="btn btn-danger deleteuser" href="#">Delete User</a></td>
          </tr>
      {% endfor %}
    </tbody>
    </table>
  </div>
</div>
</div>
<div id="userviewmodal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">User Information</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Dynamic populated via controller -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
